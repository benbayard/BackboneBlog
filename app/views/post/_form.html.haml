= form_for @post, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :body, :class => 'control-label'
    .controls
      = f.text_field :body, :class => 'text_field'
  .control-group
    = f.label :flair_file_name, :class => 'control-label'
    .controls
      = f.text_field :flair_file_name, :class => 'text_field'
  .control-group
    = f.label :flair_content_type, :class => 'control-label'
    .controls
      = f.text_field :flair_content_type, :class => 'text_field'
  .control-group
    = f.label :flair_file_size, :class => 'control-label'
    .controls
      = f.number_field :flair_file_size, :class => 'number_field'
  .control-group
    = f.label :flair_updated_at, :class => 'control-label'
    .controls
      = f.datetime_select :flair_updated_at, :class => 'datetime_select'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), post_path, :class => 'btn'
