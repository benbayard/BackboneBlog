:javascript
  $(function() {
    // Blog is the app name
    window.router = new BackboneBlog.Routers.PostsRouter({posts: #{@posts.to_json(include: :comments, methods: [:flair_url, :post_date]).html_safe}});
    Backbone.history.start();
  });