= semantic_form_for @post do |f|
  =f.inputs do
    .controls
      = f.input :title, :class => 'text_field'
    .controls
      = f.input :body, as: :ckeditor
    .controls
      = f.input :flairs, as: :file
    .controls
      = f.input :summary

  .form-actions
    = f.actions do
      =f.action :submit, as: :button
      =f.action :cancel, as: :link
