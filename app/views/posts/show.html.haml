- model_class = Post
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @post.title
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = @post.body
%p
  %strong= model_class.human_attribute_name(:flair_file_name) + ':'
  %br
  = @post.flair_file_name
%p
  %strong= model_class.human_attribute_name(:flair_content_type) + ':'
  %br
  = @post.flair_content_type
%p
  %strong= model_class.human_attribute_name(:flair_file_size) + ':'
  %br
  = @post.flair_file_size
%p
  %strong= model_class.human_attribute_name(:flair_updated_at) + ':'
  %br
  = @post.flair_updated_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), posts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(@post), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(@post), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
